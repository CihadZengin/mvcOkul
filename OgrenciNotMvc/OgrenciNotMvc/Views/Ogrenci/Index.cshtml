@using OgrenciNotMvc.Models.EntitiyFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class=" table table-bordered">
    <tr>
        <th>ÖğRRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>CİNSİYETİ</th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach(var ögr in Model)
            {
                <tr>
                    <td>@ögr.OGRENCIID</td>
                    <td>@ögr.OGRIAD</td>
                    <td>@ögr.OGRSOYAD</td>
                    <td>@ögr.OGRCINSIYET</td>
                    <td>@ögr.TBLKULUPLER.KULUPAD</td>
                    <td><a href="/Ogrenci/Sil/@ögr.OGRENCIID"class="btn btn-danger">Sil</a>
                    <a href="/Ogrenci/OgrenciGetir/@ögr.OGRENCIID"class="btn btn-success">Güncelle</a></td>
                </tr>
            }
    </tbody>
</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci</a>



